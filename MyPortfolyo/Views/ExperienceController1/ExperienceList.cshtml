@model List<Experience>

@{
	ViewData["Title"] = "ExperienceList";
	Layout = "~/Views/Layout/Index.cshtml";
	int count = 0;
}


	<div class="content">
		<div class="container-fluid">
			<h4 class="page-title">Deneyimler</h4>
			<div class="row">
				<div class="col-md-12">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Deneyim Lİstesi</div>
						</div>
						<div class="card-body">
							<div class="card-sub">
								Deneyimler ile ilgili işlemleri aşağıdaki panelden yürütebilirsiniz
							</div>
							<table class="table mt-3">
								<thead>
									<tr>
										<th scope="col">#</th>
										<th scope="col">Başlık</th>
										<th scope="col">İş</th>
										<th scope="col">Tarih</th>
										<th scope="col">Sil</th>
										<th scope="col">Güncelle</th>
									</tr>
								</thead>
								<tbody>
									@foreach(var item in Model)
									{
									count++;
									<tr>
											<td>@count</td>
											<td>@item.Head</td>
											<td>@item.Title</td>
											<td>@item.Date</td>
											<td><a href="/ExperienceController1/DeleteExperience/@item.ExperienceId" class="btn btn-danger">Sil</a></td>
											<td><a href="/ExperienceController1/UpdateExperience/@item.ExperienceId" class="btn btn-success">Güncelle</a></td>
										</tr>
									}
								
								</tbody>
							</table>
						<a href="/ExperienceController1/CreateExperience" class="btn btn-primary">Yeni Deneyim Girişi</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	


